<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/buttonDevices"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_baseline_device_hub_35"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="@string/devices"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/colorGrey"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSettings"
        app:layout_constraintTop_toBottomOf="@+id/buttonDevices" />

    <TextView
        android:id="@+id/buttonSettings"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_baseline_settings_24"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="@string/settings"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDevices" />

</androidx.constraintlayout.widget.ConstraintLayout>